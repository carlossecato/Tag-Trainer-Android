<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CheckoutActivity">

    <TextView
        android:layout_margin="18dp"
        android:id="@+id/activity_checkout_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="32dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/activity_checkout_total_value_tv"
        android:textSize="20dp"
        android:layout_margin="16dp"
        android:text="Price: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <TextView
        android:layout_margin="18dp"
        android:id="@+id/activity_checkout_payment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textSize="28dp"
        android:textAlignment="center"
        />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:id="@+id/activity_checkout_rg"
        >

        <RadioButton
            android:id="@+id/activity_checkout_rb_cartao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Cartao" />

        <RadioButton
            android:id="@+id/activity_checkout_rb_boleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Boleto" />
    </RadioGroup>

    <Button
        android:id="@+id/activity_checkout_payment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Payment Confirm" />

</LinearLayout>